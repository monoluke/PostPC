<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_message_details"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="message_details_temp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/textView_message_timestamp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="message_timestamp_temp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/textView_message_phone_src"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="message_phone_temp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        />
    <Button
        android:id="@+id/button_delete_permanently"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="delete_permanently_temp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        />

</LinearLayout>